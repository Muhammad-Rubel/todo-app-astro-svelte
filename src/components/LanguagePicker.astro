---
import * as m from '../paraglide/messages';
import { languageTag } from '../paraglide/runtime';

const makeUrlForLanguage = (lang: string) =>
  `/${lang}${Astro.url.pathname.replace(`/${languageTag()}`, '')}`;
---

<ul>
  <li>
    <a href={makeUrlForLanguage('de')}
      >{m.goToLanguage(undefined, { languageTag: 'de' })}</a
    >
  </li>
  <li>
    <a href={makeUrlForLanguage('nl')}
      >{m.goToLanguage(undefined, { languageTag: 'nl' })}</a
    >
  </li>
  <li>
    <a href="/">{m.goToLanguage(undefined, { languageTag: 'en' })}</a>
  </li>
</ul>
